{
  "compilerOptions": {
    "baseUrl": ".",
    "jsx": "react",
    "lib": ["es2015", "es2015.iterable", "dom"],
    "module": "commonjs",
    "noImplicitAny": true,
    "paths": {
      "actions/*": ["src/actions/*"],
      "components/*": ["src/components/*"],
      "reducers/*": ["src/reducers/*"],
      "selectors/*": ["src/selectors/*"],
      "theme/*": ["src/theme/*"]
    },
    "target": "es5",
    "sourceMap": true
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}